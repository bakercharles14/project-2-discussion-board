<a href="/topic">
  <button>
    Back to All Discussion Topics
  </button>
</a>

<h2>{{singleTopic.title}}</h2>

<div class="title"></div>
{{singleTopic.description}}

<div class="title"></div>
{{singleTopic.dateCreated}}

<div class="title">Posts: </div>
{{singleTopic.postCounter}}

<a href="/topic/{{singleTopic._id}}/edit">
  <button>
    Edit
  </button>
</a>

<form action="/topic/{{singleTopic._id}}?_method=DELETE" method="POST">
  <input type="submit" onclick="return confirm('Are you sure you want to delete this topic?')" value="Delete">
</form>

<form action="/post" class="create-post-form" method="POST">
<input type="hidden" value="{{singleTopic._id}}" name="topicId" />

  <label>Image URL</label>
    <input type="text" name="image" placeholder="Put Image URL Here"/>

  <label>Content</label>
  <textarea type="text" rows="3" columns="30" name="content" placeholder="Input your Post Content Here"
    required></textarea>

  <label>Date</label>
  <input type="date" name="date" required />

  <input type="submit" value="Submit Post" />
</form>

{{#each allPostsInTopic}}
<a href="/post/{{_id}}">
    <div class="post-item">
        <img src='{{image}}' />
        <div class="post-date"></div>
        {{date}}
        <div class="post-content"></div>
        {{content}}
        <div class="comment-counter">Comments:</div>
        {{commentCounter}}
    </div>
</a>
{{/each}}
