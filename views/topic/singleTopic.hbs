<a href="/topic">
  <button>
    Back to All Discussion Topics
  </button>
</a>

<h2>{{singleTopic.title}}</h2>

<a href="/topic/{{singleTopic._id}}/edit">
  <button>
    Edit Topic Title/Description
  </button>
</a>

<div class="title">Description</div>
{{singleTopic.description}}

<div class="title">Date Created</div>
{{singleTopic.dateCreated}}

<div class="title">0</div>
{{singleTopic.postCounter}}

<form action="/topic/{{singleTopic._id}}?_method=DELETE" method="POST">
  <input type="submit" onclick="return confirm('Are you sure you want to delete this item?')" value="Delete">
</form>