<h2>All Topics</h2>

<a href="/topic/new">
    <button>
        Submit New Topic
    </button>
</a>

{{#each allTopics}}
<a href="/topic/{{_id}}">
    <div class="topic-item">
        <div class="title">Topic</div>
        {{title}}
        <div class="title">Description</div>
        {{description}}
        <div class="title">Date</div>
        {{dateCreated}}
        <div class="title">Posts</div>
        {{postCounter}}
    </div>
</a>
{{/each}}