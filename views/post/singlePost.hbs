<div class="title">{{singleTopic.title}}</div>


<div class="title"></div>
{{singlePost.image}}

<div class="title"></div>
{{singlePost.date}}

<div class="title"></div>
{{singlePost.content}}

<div class="title">Comments: </div>
{{singlePost.commentCounter}}

<a href="/post/{{singlePost._id}}/edit">
  <button>
    Edit
  </button>
</a>

<form action="/post/{{singlePost._id}}?_method=DELETE" method="POST">
  <input type="submit" onclick="return confirm('Are you sure you want to delete this post?')" value="Delete">
</form>

<div>Create Comment</div>

<form action="/comment" class="create-comment-form" method="POST">
  <input type="hidden" value="{{singlePost._id}}" name="postId" />
  <label>Content</label>
  <textarea type="text" rows="3" columns="8" name="content" placeholder="Comment Here" required></textarea>

  <label>Date</label>
  <input type="date" name="date" required />

  <input type="submit" value="Submit Comment" />
</form>

{{#each allCommentsInPost}}
<a href="/comment/{{_id}}">
    <div class="comment-item">
        <div class="comment-date"></div>
        {{date}}
        <div class="comment-content"></div>
        {{content}}
    </div>
</a>
{{/each}}